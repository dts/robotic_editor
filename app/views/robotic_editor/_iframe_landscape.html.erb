  <% # hide the image, showing the background images %>
  @media (min-width: 1px) {
    div#<%= id %> { 
      width: 100%; 
      padding-bottom: <%= 100.to_f/woverh %>%;
    }
  }
</style>
<div>
<%= content %>
</div>
</div>
</div>
